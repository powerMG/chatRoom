<!DOCTYPE html>
<html lang="cn">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>main</title>
  <style>
    .chat-room-main {
      width: 800px;
      height: 600px;
      border: solid 1px #ddd;
      margin: 0 auto;
      box-shadow: 5px 5px 5px #efefef;
    }

    .chat-room-title {
      height: 10%;
      border-bottom: solid 1px #ddd;
      text-align: center;
      line-height: 60px;
    }

    .chat-room-body {
      height: 90%;
    }

    .chat-room-friend {
      float: left;
      width: 10%;
      height: 80%;
      border-right: solid 1px #ddd;
      border-bottom: solid 1px #ddd;
    }

    .chat-room-friend-item {
      width: 50px;
      height: 50px;
      border-radius: 25px;
      background: #ddd;
      text-align: center;
      color: #fff;
      font-size: 20px;
      line-height: 50px;
      font-weight: bold;
      margin:10px auto;
      cursor: pointer;
    }

    .chat-room-message {
      float: left;
      width: 89.8%;
      height: 80%;
      border-bottom: solid 1px #ddd;
    }
    .chat-room-msg-group{
      width: 100%;
      float: left;
      }
      .chat-room-msg-item{
         float:left;
         width: 50px;
         height: 50px;
         border-radius: 25px;
         background: #ddd;
         text-align: center;
         color: #fff;
         font-size: 20px;
         line-height: 50px;
         font-weight: bold;
         margin:10px auto;
         cursor: pointer;
      }
      .chat-room-msg-data{
        float: left;
        background:rgb(20, 245, 0);
        border-radius: 10px;
        height: 50px;
        color: #fff;
        font-size: 18px;
        margin:10px 0 10px 10px;
        line-height: 50px;
        padding:0 10px;
     }
    .chat-room-send {
      float: left;
      width: 100%;
      height: 20%;
    }
    .chat-room-send-data{
      width: 79.5%;
      height: 92.5%;
      border:none;
      resize:none;
      float: left;
    }
    .chat-room-send-btn{
      width: 20%;
      height: 99.5%;
      font-size: 25px;
    }
  </style>
</head>

<body>
  <div class="chat-room-main">
    <div class="chat-room-title">
      <font>欢乐聊天室</font>
    </div>
    <div class="chat-room-body">
      <div class="chat-room-friend">
        <%for(var i=0;i<clients.length;i++){%>
        <div class="chat-room-friend-item">
          h<%=i%>
        </div>
        <%}%>
      </div>
      <div class="chat-room-message" id="msgBody">         
      </div>
      <div class="chat-room-send">
        <textarea type="text" id="msg" class="chat-room-send-data"></textarea>
        <button type="button" class="chat-room-send-btn" id="send">
          发送
        </button>
      </div>
    </div>
  </div>
  <script type="text/javascript" src="/socket.io/socket.io.js"></script>
  <script>
    let nickName='';
    let userInfo=[];
    window.onload=function(){
      if(nickName===''){
        nickName=prompt('输入临时昵称')
      }
      let socket=io()
      let docSend=document.getElementById('send')
      let msg=document.getElementById('msg')
      docSend.onclick=()=>{
        socket.emit('sendMsg',{
          nickName:nickName,
          message:msg.value
        })
        // 发送成功后清除聊天内容
        msg.value=''
      }
      socket.on('userInfo',_userinfo=>{
        userInfo=_userinfo
      })
      // 接收广播信息
      socket.on('messageData',msg=>{
        console.log(msg)
        createMessage(msg)
      })
    }
    // 创建聊天内容气泡
    function createMessage(msg){
      let group=document.createElement('div')
      group.className='chat-room-msg-group'
      let item=document.createElement('div')
      item.className='chat-room-msg-item'
      let itemText=document.createTextNode(msg.nickName)
      item.appendChild(itemText)
      let data=document.createElement('div')
      data.className='chat-room-msg-data'
      group.appendChild(item)
      let dataText=document.createTextNode(msg.message)
      data.appendChild(dataText)
      group.appendChild(data)
      let msgBody=document.getElementById('msgBody')
      msgBody.appendChild(group)
    }
  </script>
</body>
</html>
